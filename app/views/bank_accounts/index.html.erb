
<h1>Bank Accounts</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @bank_accounts.each do |bank_account| %>
        <tr>
           <td><%= bank_account.account_number %></td>
           <td><%= number_to_currency(bank_account.balance, unit: "P") %></td>
           <td><%= link_to 'show', bank_account_path(bank_account.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>


